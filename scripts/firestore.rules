rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/schools/SCH_001/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // School configuration - Only Admin can write
    match /schools/{schoolId}/config/{document=**} {
      allow read: if isSignedIn();
      allow write: if hasRole('admin');
    }

    // User profiles
    match /schools/{schoolId}/users/{userId} {
      allow read: if isSignedIn();
      allow write: if hasRole('admin') || request.auth.uid == userId;
    }

    // Student records
    match /schools/{schoolId}/students/{studentId} {
      allow read: if isSignedIn();
      allow write: if hasRole('admin');
    }

    // Results/Grades
    match /schools/{schoolId}/results/{resultId} {
      allow read: if isSignedIn();
      allow write: if hasRole('admin') || hasRole('teacher');
    }

    // Finance/Fees
    match /schools/{schoolId}/feeLedgers/{ledgerId} {
      allow read: if isSignedIn() && (hasRole('admin') || (hasRole('parent') && resource.data.studentId == getUserData().associatedId));
      allow write: if hasRole('admin');
    }
  }
}
